@using Vidly.Models
@model Vidly.ViewModels.MovieGenreViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IEnumerable<Genre> genres = Model.Genres;
}

<h2>Create Movie</h2>

@using (Html.BeginForm("Create", "Movies", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div><div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate,"{0:dd-MMM-yyyy}", new { @class = "form-control" ,@id=""})
    </div><div class="form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, "{0:dd-MMM-yyyy}", new { @class = "form-control" ,@id=""})
    </div><div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(genres, "Id", "GenreName"),"--Select a genre--",new{@class="form-control"})
    </div><div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control", @type = "number" })
    </div>
    <input type="submit" class="btn btn-primary" />
}

