@using Vidly.Models
@model IList<Customer>
@{
    IList<Customer> alCustomers = Model;
}

<h1>
    Customer
</h1>
@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                Customer
            </th>
        </tr>

        @foreach (var item in alCustomers)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", new {id = item.Id})
                </td>

            </tr>
        }

    </table>
}
else
{
    <div class="alert alert-danger">
        <p>We don't have any customer yet</p>
    </div>
}
